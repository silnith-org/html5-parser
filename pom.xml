<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>org.silnith</groupId>
	<artifactId>html5-parser</artifactId>
	<version>0.7.0-SNAPSHOT</version>
	<name>HTML5 Parser</name>
	<description>A reference implementation of the parsing algorithms written into the HTML5 "specification".</description>
	<url>https://silnith.org/</url>
	<inceptionYear>2014</inceptionYear>
	<organization>
		<name>silnith.org</name>
		<url>https://silnith.org/</url>
	</organization>
	<scm>
		<url>https://svn.silnith.org/svn/repos/java/libraries/HTML5Parser/trunk</url>
		<connection>scm:svn:https://svn.silnith.org/svn/repos/java/libraries/HTML5Parser/trunk</connection>
		<developerConnection>scm:svn:https://svn.silnith.org/svn/repos/java/libraries/HTML5Parser/trunk</developerConnection>
		<tag>HEAD</tag>
	</scm>
	<ciManagement>
		<system>jenkins</system>
		<url>https://jenkins.silnith.org/jenkins/job/HTML5%20Parser/</url>
	</ciManagement>
	<developers>
		<developer>
			<name>Kent Rosenkoetter</name>
			<email>silnith@gmail.com</email>
			<id>kent</id>
			<organization>silnith.org</organization>
			<organizationUrl>https://silnith.org</organizationUrl>
			<roles>
				<role>author</role>
				<role>developer</role>
			</roles>
			<timezone>-8</timezone>
		</developer>
	</developers>
	<licenses>
		<license>
			<name>GNU General Public License v3.0 or later</name>
			<url>http://www.spdx.org/licenses/GPL-3.0+</url>
			<distribution>repo</distribution>
		</license>
	</licenses>
	<dependencies>
		<dependency>
			<groupId>junit</groupId>
			<artifactId>junit</artifactId>
			<version>4.11</version>
			<scope>test</scope>
		</dependency>
		<dependency>
			<groupId>org.mockito</groupId>
			<artifactId>mockito-core</artifactId>
			<version>1.9.5</version>
			<scope>test</scope>
		</dependency>
	</dependencies>
	<properties>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
		<project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>
		<maven.compiler.source>1.7</maven.compiler.source>
		<maven.compiler.target>1.7</maven.compiler.target>
	</properties>
	<build>
		<resources>
			<resource>
				<directory>src/main/java</directory>
				<excludes>
					<exclude>**/*.java</exclude>
				</excludes>
			</resource>
			<resource>
				<directory>src/main/resources</directory>
				<excludes>
					<exclude>**/*.java</exclude>
				</excludes>
			</resource>
		</resources>
		<plugins>
			<plugin>
				<artifactId>maven-compiler-plugin</artifactId>
				<version>3.0</version>
				<configuration>
					<source>1.7</source>
					<target>1.7</target>
				</configuration>
			</plugin>
		</plugins>
	</build>
	<reporting>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-javadoc-plugin</artifactId>
				<version>2.9</version>
			</plugin>
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>cobertura-maven-plugin</artifactId>
				<version>2.6</version>
				<configuration>
					<formats>
						<format>html</format>
						<format>xml</format>
					</formats>
				</configuration>
			</plugin>
		</plugins>
	</reporting>
</project>
